{
	"name": "Dev Containers CLI",
	"build": {
		"dockerfile": "Dockerfile"
	},
	
	"runArgs": ["--userns=keep-id"],

	"postCreateCommand": "pipenv install --dev",

	"remoteUser": "user",
	
	"features": {},
	
	"customizations": {
		"vscode": {
			"extensions": []
		},
		"codespaces": {
			"repositories": {
				"devcontainers/features": {
					"permissions": {
						"contents": "write",
						"workflows": "write"
					}
				}
			}
		}
	}
}